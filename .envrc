# YouTube API Server Environment
# This file is automatically loaded by direnv when entering this directory

# Set Python path for the project
export PYTHONPATH="${PWD}:${PYTHONPATH}"

# Virtual environment activation
if [ -f .venv/bin/activate ]; then
    source .venv/bin/activate
fi

# Application configuration
export APP_NAME="YouTube API Server"
export APP_VERSION="1.0.0"
export ENVIRONMENT="development"
export DEBUG="true"

# Server configuration
export HOST="0.0.0.0"
export PORT="8000"

# YouTube API configuration
export YOUTUBE_API_KEY="your-youtube-api-key-here"
export YOUTUBE_API_SERVICE_NAME="youtube"
export YOUTUBE_API_VERSION="v3"

# Database configuration (if needed)
export DATABASE_URL="sqlite:///./youtube_api.db"

# Logging
export LOG_LEVEL="INFO"

# Proxy Configuration
export PROXY_TYPE="webshare"
export WEBSHARE_USERNAME="your-username-here"
export WEBSHARE_PASSWORD="your-password-here"
export WEBSHARE_API_TOKEN="your-api-token-here"

# LLM Configuration (for AI chat and analysis features)
export LLM_PROVIDER="openai"
export OPENAI_API_KEY="${OPENAI_API_KEY:-}"  # Set in .env file
export OPENAI_MODEL="gpt-4o-mini"

# Load additional environment variables from .env file if it exists
if [ -f .env ]; then
    set -a
    source .env
    set +a
fi

echo "âœ… YouTube API Server environment loaded"