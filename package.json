{
  "name": "@repo/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "python3 -m venv .venv && . .venv/bin/activate && pip install -e .",
    "dev": "if [ ! -d .venv ]; then echo 'Virtual environment not found. Run: pnpm run setup'; exit 1; fi && . .venv/bin/activate && python -m app.main",
    "build": "echo 'Python app - no build step'",
    "test": ". .venv/bin/activate && pytest -v",
    "lint": ". .venv/bin/activate && ruff check app/ && ruff format app/ --check",
    "typecheck": ". .venv/bin/activate && mypy app/ --ignore-missing-imports",
    "clean": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null || true && rm -rf .pytest_cache .mypy_cache",
    "deploy": "railway up",
    "logs": "railway logs",
    "logs:follow": "railway logs -f",
    "status": "railway status",
    "vars": "railway variables",
    "redeploy": "railway redeploy"
  }
}
