# YouTube API Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Application Settings
PROJECT_NAME="YouTube API Server"
DEBUG=false

# CORS Settings
# For development: use "*" to allow all origins
# For production: use comma-separated list of allowed domains
# Examples:
#   Development: BACKEND_CORS_ORIGINS=*
#   Production: BACKEND_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
BACKEND_CORS_ORIGINS=*

# Optional: YouTube Data API Key (for enhanced metadata)
# YOUTUBE_API_KEY=your-youtube-api-key-here

# Proxy Configuration
# Set PROXY_TYPE to "webshare" to use Webshare rotating proxies
# Options: "webshare" (recommended) or "generic"
PROXY_TYPE=webshare
WEBSHARE_USERNAME=
WEBSHARE_PASSWOR=

# For generic proxies:
# PROXY_TYPE=generic
# PROXY_URL=http://username:password@proxy-server:port/
# Or specify separate HTTP/HTTPS:
# PROXY_HTTP=http://proxy-server:port
# PROXY_HTTPS=https://proxy-server:port

# Cache Configuration
# Enable/disable transcript caching (default: true)
CACHE_ENABLED=true
# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL_SECONDS=3600
# Maximum number of cached transcripts (default: 1000)
# Uses LRU eviction when limit is reached
CACHE_MAX_SIZE=1000
# Cache backend: "memory" (default) or "redis"
CACHE_BACKEND=memory

# Redis Configuration (only needed if CACHE_BACKEND=redis)
# REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true
# Number of requests allowed per window (default: 100)
RATE_LIMIT_REQUESTS=100
# Time window: second, minute, hour, or day (default: minute)
RATE_LIMIT_WINDOW=minute

# LLM Configuration (for AI chat and analysis features)
# Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# OR Anthropic Configuration
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-haiku-20240307
